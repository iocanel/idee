# name: Kubernetes Service
# key: service
# --
kind: "Service"
metadata:
  labels:
    app: ${1:`((project-name (project-current)))`}
    version: "${2:`(idee/project-version-get)`}"
  name: "$1"
spec:
  selector:
    app: $1
    version: "${2:`(idee/project-version-get)`}"
  ports:
  - port: ${2:8080}
    targetPort: ${3:8080}